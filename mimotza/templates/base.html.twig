<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <script>
            function sendEvent(userId, eventType, mess) {

                date = new Date();

                httpRequest = new XMLHttpRequest();

                httpRequest.onreadystatechange = function() {
                    if (httpRequest.readyState === XMLHttpRequest.DONE) {
                        if (httpRequest.status === 200) {
                            alert("userId=" + userId + "\neventType=" + eventType + "\nmess=" + mess + "\ndate=" + date.toISOString());
                        }
                        else {
                            alert('Il y a eu un problème avec la requête.');
                        }
                    }
                };

                httpRequest.open('POST', '/event');        // à changer : url
                httpRequest.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');

                httpRequest.send("userId=" + userId + "&eventType=" + eventType + "&mess=" + mess + "&date=" + date.toISOString());
            }

            sendEvent(1, 5, "MESSAGE");

        </script>
        {% block body %}{% endblock %}
    </body>
</html>
