{% extends 'base.html.twig' %}
{% block title %}
    {% if user.idRole.role == "Administrateur" %}
        Action refusée
    {% elseif user.idStatut.id == 3 %}
        {{user.username}} de nouveau autorisé
    {% elseif user.idStatut.id == 1 or user.idStatut.id == 2 %}
        {{user.username}} banni
    {% endif %}
{% endblock %}
{% block body %}
