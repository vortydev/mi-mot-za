{% extends 'base.html.twig' %}

{% block title %}{{user.username}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <h1>Profil de {{user.username}}</h1>
    <img src="{{user.avatar}}" alt="Il n'y a pas d'avatar pour ce joueur" width="500" height="600"/><br>
    <button type="button">Ban/Unban</button>
    <div class="stat">
        <span>Nombre de parties jouées: {{user.partie}}</span><br>
        <span>Nombre de parties gagnées: {{user.partieWin}}</span><br>
        <span>Temps de jeu: {{user.temps}}</span><br>
        <span>Date de création du compte: {{user.dateCreation}}</span><br>
        <span>État du compte: {{user.statut}}</span><br>
    </div>
</div>
{% endblock %}
